generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  avatar    String?
  createdAt DateTime  @default(now())

  recipes   Recipe[]  
}

model Recipe {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  image       String?
  ingredients String   
  createdAt   DateTime @default(now())

  user        User     @relation(fields: [userId], references: [id])
  userId      Int     
}

